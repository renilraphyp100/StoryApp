<h1 class="text-center">Create Authors and Stories</h1>
<%= form_for @author do |f| %>
    <h3>Author details</h3>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: 'form-control' %>
    </div>
    <h3>Story details</h3>
   <%= fields_for @story do |fs| %>
        <div class="form-group">
            <%= fs.label :title %>
            <%= fs.text_field :title, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%=fs.label :content %>
            <%=fs.text_field :content, class: 'form-control' %>
        </div>
   <% end %>

<% end %>