<h1 class="text-center">Create Authors and Stories</h1>

<%= render :partial => "layouts/error", locals: {object: @author, object2: @story} %>

<%= form_for @author, html: { multipart: true } do |f| %>
    <h3>Author details</h3>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= f.label :bio %>
        <%= f.text_area :bio, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <b>Author Image</b>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
    
    
    <h3>Story details</h3>
    <%= fields_for @story do |fs| %>
        <div class="form-group"
            <%= fs.label :title %>
            <%= fs.text_field :title, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= fs.label :content %>
            <%= fs.text_area :content, class: 'form-control' %>
        </div>
        
        <div class="form-group">
            <b>Story Image</b>
            <%= fs.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
    
    <% end %>
   
    <div class="text-center">
        <%= f.submit 'Create a Entry', :class => 'btn btn-primary' %>
    </div>

<% end %>